# F1 Strategy Optimizer - Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENV=local  # local, staging, production

# GCP Configuration (for production)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
BIGQUERY_DATASET=f1_data

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow
AIRFLOW__CORE__FERNET_KEY=FB0o_zt4e3Ziq3LdUUO7F2Z95cvFFx16hU8jTeR1ASM=
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth
AIRFLOW__WEBSERVER__SECRET_KEY=airflow_webserver_secret_key

# API Keys (use secrets in production!)
ERGAST_API_KEY=your-ergast-api-key
FASTF1_CACHE_DIR=/tmp/fastf1_cache

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENABLE_HTTPS=false  # Set to true in production
ENABLE_IAM=true
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Mock Services (for local development)
MOCK_BIGQUERY_HOST=mock-bigquery
MOCK_BIGQUERY_PORT=9050
MOCK_PUBSUB_HOST=mock-pubsub
MOCK_PUBSUB_PORT=8085
MOCK_DATAFLOW_HOST=mock-dataflow
MOCK_DATAFLOW_PORT=9051

# Budget Controls
MONTHLY_BUDGET_USD=200
COST_ALERT_THRESHOLD_USD=50

# ML Training
RAY_ADDRESS=auto
NUM_WORKERS=2
USE_GPU=false

# Feature Flags
ENABLE_TELEMETRY_INGESTION=true
ENABLE_REAL_TIME_PREDICTIONS=true
ENABLE_COST_TRACKING=true
